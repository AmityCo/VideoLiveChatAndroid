<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1d2025"
    android:padding="12dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileDarkImageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:src="@drawable/amity_ic_default_profile2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/messageDarkTextview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.7"
                android:background="@drawable/bg_chat_text_input_dark"
                android:gravity="center_vertical"
                android:hint="@string/livechat_message_box_hint"
                android:singleLine="true"
                android:paddingStart="16dp"
                android:paddingEnd="50dp"
                android:textAlignment="gravity"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="@+id/profileDarkImageView"
                app:layout_constraintEnd_toStartOf="@+id/sendChatImageView"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/profileDarkImageView"
                app:layout_constraintTop_toTopOf="@+id/profileDarkImageView" />

            <ImageButton
                android:id="@+id/sendChatImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_action_send"
                app:layout_constraintBottom_toBottomOf="@+id/messageDarkTextview"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="send_message" />

            <TextView
                android:id="@+id/sendLoveEmoji"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="@string/love_emoji"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="@+id/messageDarkTextview"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/sendSmileEmoji"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:text="@string/smile_emoji"
                app:layout_constraintBottom_toBottomOf="@+id/messageDarkTextview"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/sendlolEmoji"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:text="@string/lol_face_emoji"
                app:layout_constraintBottom_toBottomOf="@+id/messageDarkTextview"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/sendHeartEyeEmoji"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:text="@string/heart_eye_emoji"
                app:layout_constraintBottom_toBottomOf="@+id/messageDarkTextview"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:id="@+id/sendFiremoji"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:text="@string/fire_emoji"
                app:layout_constraintBottom_toBottomOf="@+id/messageDarkTextview"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>


    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
